pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Image Prune') {
            steps {
                sh 'docker image prune -f'
            }
        }
        stage('Image Build') {
            steps {
                sh 'docker build -t springbootdocker:latest --pull --no-cache .'
                echo 'Image build complete'
            }
        }
        stage('Push to Docker Registry') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerHubAccount',
                    usernameVariable: 'DOCKER_HUB_USER',
                    passwordVariable: 'DOCKER_HUB_PASS')]) {
                    sh '''
                        echo $DOCKER_HUB_PASS | docker login -u $DOCKER_HUB_USER --password-stdin
                        docker tag springbootdocker:latest $DOCKER_HUB_USER/springbootdocker:latest
                        docker push $DOCKER_HUB_USER/springbootdocker:latest
                    '''
                }
            }
        }
    }
}
